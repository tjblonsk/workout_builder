<h1>Workouts</h1>

<div id="workoutsIndex">
<ul>
  <% @workouts.each do |wo| %>
    <li><h4><a href="/workouts/<%= wo.id %>"><%= wo.name %></a></h4> (<%= wo.videos.count %> videos)
      <% if wo.description.nil? %>
        <%= %>
      <% else %>
      <ul>
        <li><%= wo.description %></li>
      </ul>
      <% end %>
    </li></br>
  <% end %>
</ul>
</div>


<h3 style="text-align:center; padding-top:25px"><%= link_to "Create Workout", new_workout_path %></h3>


