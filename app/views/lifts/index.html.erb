<h1>Arnold says: These are your Lifts!</h1>

<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT3-hQ1YuCsEuMgyGuJX_-gAT-AFUI55zmZc04qhMPmniE7HZsK">

<ul>
  <% @lifts.each do |lift| %>
    <li><h3><a href="/lifts/<%= lift.id %>"><%= lift.name %></a></h3>
     (<%= lift.videos.count %>)
    </li></br>
  <% end %>
    <li><h3><%= link_to "All Videos",  lifts_videos_path %></h3> (<%= @videos.count %>)
    </li>
</ul>

<h3>Create new lift category</h3>
<h6>This will be added to the dropdown in video search</h6>
<%= form_for(@lift, :url => videos_path, :method => :post) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => "Enter a new category" %>
  <%= f.submit %>
<% end %>